<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/flexible_space_image_height"
        android:scaleType="centerCrop"
        android:id="@+id/image"

        android:background="@drawable/heroimage" />

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/flexible_space_image_height"
        android:background="@color/primary" />


    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lin2">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/flexible_space_image_height"
                android:background="@color/transparent" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                android:background="@color/background"
                android:paddingBottom="8dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="32dp"
                    android:text="@string/ShortDescription"
                    android:id="@+id/HeX1"
                    android:textSize="20dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/textColorPrimary"
                    />


                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/card_background"

                    android:layout_marginTop="16dp"
                    android:id="@+id/CradViewWhatsNew"
                    android:elegantTextHeight="false"
                    android:elevation="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5.59"
                        >

                        <TextView
                            android:textColor="@color/textColorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/WhatsNew0"
                            android:id="@+id/textView52"
                            android:layout_gravity="left|top"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:textStyle="bold"
                            android:elevation="5dp" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="66dp"
                            android:text="@string/WhatsNewDetail"

                            android:id="@+id/textView53"
                            android:layout_gravity="left|top"
                            android:layout_marginLeft="16dp"
                            android:textColor="@color/text_color_secondary"
                            android:elevation="5dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="8dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                android:background="@color/background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more"
                    android:id="@+id/textView51"
                    android:layout_gravity="center"
                    android:textColor="@color/accent"
                    android:textSize="16dp"
                    android:layout_marginTop="0dp"
                    android:padding="8dp"
                    android:onClick="showChangelog"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontalScrollView"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="0dp"
                    android:scrollbars="none"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/LinearLayoutScreenshots">



                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                android:id="@+id/lin1"
                android:background="@color/background">

                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/card_background"

                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/CardViewCategory1"
                    android:elegantTextHeight="false"
                    android:elevation="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Tv_Category1Name"

                        android:elevation="5dp"
                        android:textColor="@color/accent"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:textSize="16dp"
                        />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="48dp"
                        android:layout_marginLeft="16dp"
                        android:id="@+id/LinearLayoutCategory1"
                        android:layout_marginBottom="16dp">






                    </LinearLayout>



                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/card_background"

                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="36dp"
                    android:id="@+id/CardViewCategory2"
                    android:elegantTextHeight="false"
                    android:elevation="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Tv_Category2Name"

                        android:elevation="5dp"
                        android:textColor="@color/accent"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="48dp"
                        android:layout_marginLeft="16dp"
                        android:id="@+id/LinearLayoutCategory2"
                        android:layout_marginBottom="16dp">

                    </LinearLayout>





                </android.support.v7.widget.CardView>



            </LinearLayout>


        </LinearLayout>


    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/popupNew"
        app:theme="@style/Toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_standard">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minHeight="?attr/actionBarSize"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/flexible_space_image_height"
            android:background="@color/transparent" />
    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:scaleType="center"
        app:fab_colorNormal="@color/accent"
        app:fab_colorPressed="@color/accentLight"
        android:src="@drawable/ic_action_add"
        android:onClick="installTheme"
        android:clickable="true" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:scaleType="center"
        app:fab_colorNormal="@color/accent"
        app:fab_colorPressed="@color/accentLight"
        android:src="@drawable/ic_action_add"
        android:onClick="installTheme"
        android:layout_margin="16dp"
        android:clickable="true"
        android:visibility="visible" />



</FrameLayout>

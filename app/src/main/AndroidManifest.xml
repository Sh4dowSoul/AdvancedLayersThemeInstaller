<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.schnettler.AdvancedLayersThemeInstaller"
    android:versionCode="1"
    android:versionName="B1.0" >
>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/AppName"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.schnettler.AdvancedLayersThemeInstaller.activities.MainActivity"
            android:label="@string/AppName"
            android:theme="@style/Theme.Toolbar" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.schnettler.AdvancedLayersThemeInstaller.activities.AboutActivity"
            android:parentActivityName="com.schnettler.AdvancedLayersThemeInstaller.activities.MainActivity"
            android:label=""
            android:theme="@style/Toolbar2" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.schnettler.AdvancedLayersThemeInstaller.activities.MainActivity" />
        </activity>

        <activity
            android:name="com.schnettler.AdvancedLayersThemeInstaller.activities.SettingsActivity"
            android:label="@string/Settings"
            android:theme="@style/Theme.TranslucentActionBar"
            android:parentActivityName="com.schnettler.AdvancedLayersThemeInstaller.activities.MainActivity" >>
        </activity>


        <activity
            android:name="com.schnettler.AdvancedLayersThemeInstaller.activities.ImageViewerActivity"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/AppThemeAppcompat" >
        </activity>

        <activity
            android:name="com.schnettler.AdvancedLayersThemeInstaller.activities.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>



        <activity
            android:name="com.schnettler.AdvancedLayersThemeInstaller.activities.TutorialActivity"
            android:label="@string/title_activity_tutorial"
            android:theme="@style/Tutorial">
        </activity>
    </application>

</manifest>
